FROM ubuntu:latest
MAINTAINER "Chrisanne Rebello"
RUN apt update -y
RUN apt install nginx -y
EXPOSE 80
COPY index.html /usr/share/nginx/html/index.html
COPY index.html /var/www/html/index.html
CMD ["nginx","-g","daemon off;"]


Docker 4.6.1(76265)

docker build -t josh .

docker run -it -p 8888:80 josh

